---
// EventHero Component - Creative event landing page hero section
---

<section id="hero">
	<div class="hero-background">
		<div class="shape shape-1"></div>
		<div class="shape shape-2"></div>
		<div class="shape shape-3"></div>
	</div>

	<div class="hero-content">
		<h1 class="event-title">CREATIVE SUMMIT 2026</h1>
		<p class="tagline">Where Innovation Meets Imagination</p>
		<div class="event-details">
			<span class="detail">
				<svg width="20" height="20" viewBox="0 0 20 20" fill="none" xmlns="http://www.w3.org/2000/svg">
					<path d="M6.667 1.667v2.5M13.333 1.667v2.5M2.917 7.5h14.166M4.167 3.333h11.666c.69 0 1.25.56 1.25 1.25v11.667c0 .69-.56 1.25-1.25 1.25H4.167c-.69 0-1.25-.56-1.25-1.25V4.583c0-.69.56-1.25 1.25-1.25Z" stroke="currentColor" stroke-width="1.5" stroke-linecap="round" stroke-linejoin="round"/>
				</svg>
				March 15-17, 2026
			</span>
			<span class="detail">
				<svg width="20" height="20" viewBox="0 0 20 20" fill="none" xmlns="http://www.w3.org/2000/svg">
					<path d="M17.5 8.333c0 5.834-7.5 10-7.5 10s-7.5-4.166-7.5-10a7.5 7.5 0 0 1 15 0Z" stroke="currentColor" stroke-width="1.5" stroke-linecap="round" stroke-linejoin="round"/>
					<path d="M10 10.833a2.5 2.5 0 1 0 0-5 2.5 2.5 0 0 0 0 5Z" stroke="currentColor" stroke-width="1.5" stroke-linecap="round" stroke-linejoin="round"/>
				</svg>
				San Francisco, CA
			</span>
		</div>
		<div class="cta-buttons">
			<a href="#register" class="button primary">Get Your Tickets</a>
			<a href="#schedule" class="button secondary">View Schedule</a>
		</div>
	</div>

	<div class="scroll-indicator">
		<svg width="24" height="24" viewBox="0 0 24 24" fill="none" xmlns="http://www.w3.org/2000/svg">
			<path d="M12 5v14M19 12l-7 7-7-7" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round"/>
		</svg>
	</div>
</section>

<style>
	#hero {
		position: relative;
		min-height: 100vh;
		display: flex;
		align-items: center;
		justify-content: center;
		overflow: hidden;
		font-family: Inter, Roboto, 'Helvetica Neue', 'Arial Nova', 'Nimbus Sans', Arial, sans-serif;
		background: linear-gradient(135deg, #1E1B26 0%, #2D1B3D 50%, #1E1B26 100%);
	}

	.hero-background {
		position: absolute;
		top: 0;
		left: 0;
		width: 100%;
		height: 100%;
		z-index: 0;
		background:
			radial-gradient(circle at 20% 50%, rgba(139, 92, 246, 0.3) 0%, transparent 50%),
			radial-gradient(circle at 80% 50%, rgba(168, 85, 247, 0.2) 0%, transparent 50%);
		animation: gradientShift 8s ease-in-out infinite;
	}

	.shape {
		position: absolute;
		border-radius: 50%;
		filter: blur(60px);
		opacity: 0;
		animation: fadeInFloat 3s ease-out forwards;
	}

	.shape-1 {
		width: 300px;
		height: 300px;
		background: linear-gradient(135deg, #8B5CF6, #A855F7);
		top: 10%;
		left: 10%;
		animation-delay: 200ms;
	}

	.shape-2 {
		width: 400px;
		height: 400px;
		background: linear-gradient(135deg, #FB7185, #F97316);
		bottom: 15%;
		right: 10%;
		animation-delay: 400ms;
	}

	.shape-3 {
		width: 250px;
		height: 250px;
		background: linear-gradient(135deg, #38BDF8, #8B5CF6);
		top: 50%;
		left: 50%;
		transform: translate(-50%, -50%);
		animation-delay: 600ms;
	}

	.hero-content {
		position: relative;
		z-index: 1;
		text-align: center;
		max-width: 900px;
		padding: 2rem;
	}

	.event-title {
		font-size: clamp(2.5rem, 5vw, 4rem);
		font-weight: 900;
		letter-spacing: -0.02em;
		line-height: 1.1;
		margin: 0 0 1rem;
		background: linear-gradient(135deg, #FAFAF9 0%, #A855F7 50%, #FB7185 100%);
		-webkit-background-clip: text;
		-webkit-text-fill-color: transparent;
		background-clip: text;
		opacity: 0;
		animation: fadeInUp 0.8s ease-out 400ms forwards;
	}

	.tagline {
		font-size: clamp(1.25rem, 3vw, 2rem);
		color: #FAFAF9;
		margin: 0 0 2rem;
		font-weight: 300;
		letter-spacing: 0.02em;
		opacity: 0;
		animation: fadeInUp 0.8s ease-out 600ms forwards;
	}

	.event-details {
		display: flex;
		justify-content: center;
		gap: 2rem;
		margin-bottom: 3rem;
		flex-wrap: wrap;
		opacity: 0;
		animation: fadeInUp 0.8s ease-out 800ms forwards;
	}

	.detail {
		display: flex;
		align-items: center;
		gap: 0.5rem;
		color: #A855F7;
		font-size: 1.125rem;
		font-weight: 500;
	}

	.detail svg {
		flex-shrink: 0;
	}

	.cta-buttons {
		display: flex;
		justify-content: center;
		gap: 1rem;
		flex-wrap: wrap;
		opacity: 0;
		animation: fadeInUp 0.8s ease-out 1000ms forwards;
	}

	.button {
		display: inline-flex;
		align-items: center;
		padding: 14px 32px;
		font-size: 1.125rem;
		font-weight: 600;
		text-decoration: none;
		border-radius: 12px;
		transition: all 0.2s ease-out;
		min-width: 180px;
		justify-content: center;
	}

	.button.primary {
		color: white;
		background: linear-gradient(135deg, #8B5CF6 0%, #A855F7 100%);
		box-shadow:
			inset 0 0 0 1px rgba(255, 255, 255, 0.12),
			inset 0 -2px 0 rgba(0, 0, 0, 0.24),
			0 4px 12px rgba(139, 92, 246, 0.4);
	}

	.button.primary:hover {
		transform: scale(1.05) translateY(-2px);
		box-shadow:
			inset 0 0 0 1px rgba(255, 255, 255, 0.12),
			0 8px 24px rgba(139, 92, 246, 0.6);
	}

	.button.secondary {
		color: #FAFAF9;
		background: rgba(255, 255, 255, 0.05);
		border: 2px solid rgba(168, 85, 247, 0.5);
		backdrop-filter: blur(10px);
	}

	.button.secondary:hover {
		background: rgba(255, 255, 255, 0.1);
		border-color: #A855F7;
		transform: scale(1.05) translateY(-2px);
	}

	.scroll-indicator {
		position: absolute;
		bottom: 2rem;
		left: 50%;
		transform: translateX(-50%);
		color: rgba(250, 250, 249, 0.6);
		animation: bounce 2s ease-in-out 1200ms infinite;
		z-index: 1;
	}

	@keyframes fadeInUp {
		from {
			opacity: 0;
			transform: translateY(30px);
		}
		to {
			opacity: 1;
			transform: translateY(0);
		}
	}

	@keyframes fadeInFloat {
		0% {
			opacity: 0;
			transform: translateY(30px);
		}
		100% {
			opacity: 0.4;
			transform: translateY(0);
			animation: float 6s ease-in-out infinite;
		}
	}

	@keyframes float {
		0%, 100% {
			transform: translateY(0px);
		}
		50% {
			transform: translateY(-20px);
		}
	}

	@keyframes bounce {
		0%, 100% {
			transform: translateX(-50%) translateY(0);
		}
		50% {
			transform: translateX(-50%) translateY(-10px);
		}
	}

	@keyframes gradientShift {
		0%, 100% {
			background-position: 0% 50%;
		}
		50% {
			background-position: 100% 50%;
		}
	}

	/* Accessibility: Reduced motion */
	@media (prefers-reduced-motion: reduce) {
		*, *::before, *::after {
			animation-duration: 0.01ms !important;
			animation-iteration-count: 1 !important;
			transition-duration: 0.01ms !important;
		}
	}

	/* Responsive Design */
	@media screen and (max-width: 768px) {
		.event-title {
			font-size: 2.5rem;
		}

		.tagline {
			font-size: 1.25rem;
		}

		.event-details {
			flex-direction: column;
			gap: 1rem;
		}

		.cta-buttons {
			flex-direction: column;
			align-items: stretch;
		}

		.button {
			width: 100%;
		}

		.shape-1, .shape-2, .shape-3 {
			width: 200px;
			height: 200px;
		}
	}

	@media screen and (max-width: 480px) {
		.hero-content {
			padding: 1rem;
		}

		.button {
			padding: 12px 24px;
			font-size: 1rem;
		}
	}
</style>
